alias top='htop'
alias g='git status'
alias uu='yes | yay --noconfirm -Syyu'
alias lsorphans='sudo pacman -Qdt'
alias rmorphans='sudo pacman -Rns $(lsorphans| cut -d " " -f 1)'

# List aliases
alias l='ls -hAlo'
alias ll='ls -hol'
alias la='ls -aA'

alias df='df -h'
alias sortmirrors='sudo reflector --verbose -c Germany -c France -c Italy -l 200 -p http --sort rate --save /etc/pacman.d/mirrorlist; sudo pacman -Syyu'
alias gl='git log --oneline'
alias less='bat --decorations never'
alias vim='nvim'
alias v='nvim .'
alias neovimconf='nvim ~/.config/nvim/init.lua'

# Utils
alias list_npm_scripts='jq .scripts package.json'
alias task='go-task'
alias docker-stop-all='docker stop $(docker ps -aq)'
alias docker-rm-all='docker rm $(docker ps -aq)'
alias wt='git worktree'
alias or='cd ~/repos/$(ls ~/repos | fzf)'
alias ow='cd $(worktree_selector.py)'
